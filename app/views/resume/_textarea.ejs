<script id="textarea-template" type="text/x-handlebars-template">
    <div class="card textarea">
        <div class="card-content">
            <div class="edit-mode">

                <form action="/users/{{user._id}}/resumes/{{resume._id}}/textareas/{{param._id}}" class="delete-section-form show-on-hover">
                    <a class="form-submit" href="#">
                        <i class="material-icons grey-text">delete</i>
                    </a>
                </form>
                <form class="textarea-edit-form" action="/users/{{user._id}}/resumes/{{resume._id}}/textareas/{{param._id}}" method="put" data-display-template-id="textarea-display-template">
                    <div class="row">
                        <div class="col s6">
                            <input type="text" name="name" value="{{param.name}}" class="card-title">
                        </div>
                    </div>

                    <div class="input-field">
                        <label for="content">Content</label>
                        <textarea name="content" class="materialize-textarea">{{param.content}}</textarea>
                    </div>

                    <div class="save-buttons">
                        <button class="btn right">Save</button>
                        <button class="btn-flat right cancel">Cancel</button>
                        <div class="clearfix"></div>
                    </div>
                </form>
            </div>

            <div class="display-mode">
                {{> textareaDisplay param=param user=user resume=resume }}
            </div>

        </div>
    </div>
</script>

<script id="textarea-display-template" type="text/x-handlebars-template">

    <span class="card-title">{{param.name}}</span>
    <a class="btn-floating edit" style="display:none">
        <i class="material-icons">edit</i>
    </a>

    <p class="content">
        {{param.content}}
    </p>
</script>
